<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="245.0" prefWidth="634.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MyController">
   <center>
       <AnchorPane prefHeight="325.0" prefWidth="634.0" BorderPane.alignment="CENTER">
           <Button fx:id="encodeButton" disable="true" layoutX="124.0" layoutY="151.0" mnemonicParsing="false" onAction="#encodeButtonClick" text="Encode" />
           <TextField fx:id="encodeTextField" layoutX="71.0" layoutY="115.0" />
           <Label layoutX="71.0" layoutY="96.0" text="Enter text to encode" />
           <Button layoutX="417.0" layoutY="115.0" mnemonicParsing="false" onAction="#decodeButtonClick" text="Decode" />
           <Label fx:id="decodedTextLabel" alignment="CENTER" layoutX="381.0" layoutY="156.0" prefHeight="16.0" prefWidth="141.0" text="Decoded text" />
           <Label fx:id="instructionLabel" layoutX="55.0" layoutY="32.0" prefHeight="21.0" prefWidth="296.0" text="Load your JPEG picture">
              <font>
                  <Font name="System Bold" size="18.0" />
              </font>
           </Label>
           <Button fx:id="showPictureButton" disable="true" layoutX="400.0" layoutY="30.0" mnemonicParsing="false" onAction="#showPictureButtonClick" text="Show Picture" />
       </AnchorPane>
   </center>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" onAction="#loadNewImage" onMenuValidation="#loadNewImage" text="Load image..." />
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" onAction="#aboutInfoShow" onMenuValidation="#aboutInfoShow" text="About" />
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
